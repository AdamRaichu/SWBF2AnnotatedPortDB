{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for SWBF2 port definitions and annotations",
  "additionalProperties": {
    "type": "object",
    "description": "Type definition containing input and output ports as objects keyed by hex hash",
    "properties": {
      "i": {
        "type": "object",
        "description": "Object mapping input port hash (hex string) to [type, annotation]",
        "additionalProperties": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": [
            {
              "type": "integer",
              "description": "Port type (0: Unknown, 1: Property, 2: Event, 3: Link)",
              "enum": [
                0,
                1,
                2,
                3
              ],
              "default": 0
            },
            {
              "type": "string",
              "description": "Optional comment/annotation for the port",
              "default": ""
            }
          ]
        },
        "propertyNames": {
          "type": "string"
        }
      },
      "o": {
        "type": "object",
        "description": "Object mapping output port hash (hex string) to [type, annotation]",
        "additionalProperties": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": [
            {
              "type": "integer",
              "description": "Port type (0: Unknown, 1: Property, 2: Event, 3: Link)",
              "enum": [
                0,
                1,
                2,
                3
              ],
              "default": 0
            },
            {
              "type": "string",
              "description": "Optional comment/annotation for the port",
              "default": ""
            }
          ]
        },
        "propertyNames": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]+$"
        }
      },
      "c": {
        "type": "string",
        "description": "Optional comment/annotation for the entity",
        "default": ""
      }
    },
    "required": [],
    "additionalProperties": false
  }
}