{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for SWBF2 port definitions and annotations",
  "additionalProperties": {
    "type": "object",
    "description": "Type definition containing input and output ports as objects keyed by hex hash",
    "properties": {
      "i": {
        "type": "object",
        "description": "Object mapping input port hash (hex string) to port information",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "ct": {
              "type": "integer",
              "description": "Connection type (1: Property, 2: Event, 3: Link)",
              "enum": [
                1,
                2,
                3
              ]
            },
            "dt": {
              "type": "string",
              "description": "Data type of the port"
            },
            "c": {
              "type": "string",
              "description": "Optional comment/annotation for the port"
            }
          },
          "required": []
        },
        "propertyNames": {
          "type": "string"
        }
      },
      "o": {
        "type": "object",
        "description": "Object mapping output port hash (hex string) to port information",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "ct": {
              "type": "integer",
              "description": "Connection type (1: Property, 2: Event, 3: Link)",
              "enum": [
                1,
                2,
                3
              ]
            },
            "dt": {
              "type": "string",
              "description": "Data type of the port"
            },
            "c": {
              "type": "string",
              "description": "Optional comment/annotation for the port"
            }
          },
          "required": []
        },
        "propertyNames": {
          "type": "string"
        }
      },
      "c": {
        "type": "string",
        "description": "Optional comment/annotation for the entity",
        "default": ""
      }
    },
    "required": [],
    "additionalProperties": false
  }
}