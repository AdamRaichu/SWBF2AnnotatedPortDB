{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for SWBF2 port definitions and annotations",
  "additionalProperties": {
    "type": "object",
    "description": "Type definition containing input and output ports",
    "properties": {
      "i": {
        "type": "array",
        "description": "Array of input ports with their type and annotations",
        "items": {
          "type": "array",
          "description": "Port entry containing hash, type, and annotation",
          "minItems": 3,
          "maxItems": 3,
          "items": [
            {
              "type": "string",
              "description": "Port hash value in hexadecimal format",
              "pattern": "^0x[0-9a-fA-F]+$"
            },
            {
              "type": "integer",
              "description": "Port type (0: Unknown, 1: Connection, 2: Event, 3: Link)",
              "enum": [
                0,
                1,
                2,
                3
              ],
              "default": 0
            },
            {
              "type": "string",
              "description": "Optional comment/annotation for the port",
              "default": ""
            }
          ]
        }
      },
      "o": {
        "type": "array",
        "description": "Array of output ports with their type and annotations",
        "items": {
          "type": "array",
          "description": "Port entry containing hash, type, and annotation",
          "minItems": 3,
          "maxItems": 3,
          "items": [
            {
              "type": "string",
              "description": "Port hash value in hexadecimal format",
              "pattern": "^0x[0-9a-fA-F]+$"
            },
            {
              "type": "integer",
              "description": "Port type (0: Unknown, 1: Connection, 2: Event, 3: Link)",
              "enum": [
                0,
                1,
                2,
                3
              ],
              "default": 0
            },
            {
              "type": "string",
              "description": "Optional comment/annotation for the port",
              "default": ""
            }
          ]
        }
      }
    },
    "required": [
      "i",
      "o"
    ],
    "additionalProperties": false
  }
}